<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Date</th>
      <th>Host</th>
      <th>Rsvp open date</th>
      <th>Rsvp close date</th>
      <th>Closed</th>
      <th>Venue</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.type %></td>
        <td><%= event.date %></td>
        <td><%= event.host %></td>
        <td><%= event.rsvp_open_date %></td>
        <td><%= event.rsvp_close_date %></td>
        <td><%= event.closed %></td>
        <td><%= event.venue %></td>
        <td><%= event.url %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

