<h1>Listing rsvps</h1>

<table>
  <thead>
    <tr>
      <th>Subscriber</th>
      <th>Form</th>
      <th>Success</th>
      <th>Attempts</th>
      <th>Last attempt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.subscriber_id %></td>
        <td><%= rsvp.form_id %></td>
        <td><%= rsvp.success %></td>
        <td><%= rsvp.attempts %></td>
        <td><%= rsvp.last_attempt %></td>
        <td><%= link_to 'Show', rsvp %></td>
        <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
        <td><%= link_to 'Destroy', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

