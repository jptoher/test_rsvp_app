<h1>Listing forms</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Type</th>
      <th>Runs</th>
      <th>Last run</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forms.each do |form| %>
      <tr>
        <td><%= form.event_id %></td>
        <td><%= form.type %></td>
        <td><%= form.runs %></td>
        <td><%= form.last_run %></td>
        <td><%= form.url %></td>
        <td><%= link_to 'Show', form %></td>
        <td><%= link_to 'Edit', edit_form_path(form) %></td>
        <td><%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

